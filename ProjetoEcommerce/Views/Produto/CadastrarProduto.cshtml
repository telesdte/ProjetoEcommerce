@{
    ViewData["Title"] = "Cadastro de Produto";
}

<link href="~/css/cadastroproduto.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg border-0">
                <div class="card-header text-center text-white bg-primary">
                    <h3>Cadastro de Produto</h3>
                    <p class="m-0 small">Adicione produtos para Cães e Gatos</p>
                </div>

                <div class="card-body">

                    <form asp-controller="Produto" asp-action="Salvar" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nome do Produto</label>
                            <input type="text" class="form-control" name="Nome" placeholder="Ex: Coleira de nylon" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Descrição</label>
                            <textarea class="form-control" name="Descricao" rows="3" placeholder="Descrição do produto" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Preço (R$)</label>
                            <input type="number" class="form-control" name="Preco" step="0.01" placeholder="Ex: 59.90" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Quantidade em Estoque</label>
                            <input type="number" class="form-control" name="Quantidade" placeholder="Ex: 10" required>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                            Cadastrar Produto
                        </button>

                        <a asp-controller="Produto" asp-action="Index" class="btn btn-secondary w-100 mt-2">
                            Voltar
                        </a>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>