@{
    ViewData["Title"] = "Menu";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5 text-center" style="width: 450px;">
        <h2 class="mb-4 fw-bold">Menu Principal</h2>
        <p class="text-muted mb-4">Escolha uma opção abaixo</p>

        <a asp-controller="Produto" asp-action="CadastrarProduto" class="btn btn-primary btn-lg w-100 mb-3">
            Cadastrar Produto
        </a>

        <a asp-controller="Produto" asp-action="Index" class="btn btn-success btn-lg w-100 mb-3">
            Listar Produtos
        </a>

        <a asp-controller="Produto" asp-action="Index" class="btn btn-warning btn-lg w-100">
            Editar / Excluir Produto
        </a>
    </div>
</div>